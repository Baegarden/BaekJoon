import java.util.Scanner;

// Baekjoon 1712 : 손익분기점
public class Main {

	public static void main(String[] args){
		Scanner scan = new Scanner(System.in);
	    int a = scan.nextInt();
		int b = scan.nextInt();
		int c = scan.nextInt();
		int num = 0;
		
		if(b < c)
			System.out.print(a / (c -b) + 1);
		else 
			System.out.print(-1);
	}
}

# Baekjoon 1712(py) : 손익분기점
A, B, C = map(int, input().split())
if B >= C:
    print(-1)
else:
    print(int(A//(C-B)+1))
